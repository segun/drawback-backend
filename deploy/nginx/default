# Redirect all HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name mail.drawback.chat drawback.chat www.drawback.chat;

    if ($host = mail.drawback.chat) {
        return 301 https://$host$request_uri;
    }

    if ($host = www.drawback.chat) {
        return 301 https://$host$request_uri;
    }

    if ($host = drawback.chat) {
        return 301 https://$host$request_uri;
    }

    return 404;
}

# Default catch-all (non-matching hosts on port 80)
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    location / {
        try_files $uri $uri/ =404;
    }
}

# Main HTTPS server
server {
    listen 443 ssl;
    listen [::]:443 ssl ipv6only=on;

    server_name mail.drawback.chat drawback.chat www.drawback.chat;

    ssl_certificate /etc/letsencrypt/live/drawback.chat/fullchain.pem;       # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/drawback.chat/privkey.pem;     # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf;                          # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;                            # managed by Certbot

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    # Proxy /api/* to the NestJS backend
    location /api/ {
        proxy_pass http://127.0.0.1:3000/api/;
        proxy_http_version 1.1;

        # WebSocket upgrade support (for Socket.io)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # Proxy Socket.io namespace /drawback
    location /drawback/ {
        proxy_pass http://127.0.0.1:3000/drawback/;
        proxy_http_version 1.1;

        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # Serve frontend from /var/www/html
    location / {
        try_files $uri $uri/ =404;
    }
}
